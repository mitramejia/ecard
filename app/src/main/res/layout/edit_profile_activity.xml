<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="unibe.ecard.EditProfileActivity"
    android:padding="0dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/profileHeaderHeight"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Mitra MejÃ­a"
        android:id="@+id/textUserFullName"

        android:layout_gravity="fill|right|top"
        android:gravity="center_vertical|center_horizontal"
        android:autoText="false"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/white"
        android:elegantTextHeight="true"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_alignParentTop="true" />

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="false"
        android:rowCount="10"
        android:columnCount="1"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textUserFullName"
        android:id="@+id/gridLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Habilities"
            android:id="@+id/labelUserHabilities"
            android:layout_row="2"
            android:layout_column="0"
            android:elegantTextHeight="false"
            android:layout_marginTop="@dimen/label_margin_vertical" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="JavaScript"
            android:id="@+id/textUserHability1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:singleLine="false"
            android:layout_gravity="top" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Android Development"
            android:id="@+id/textUserHability2"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:singleLine="false" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Contact"
            android:id="@+id/labelUserContact"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/label_margin_vertical" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Av. Independencia KM 10/2"
            android:id="@+id/textUserDirection"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:inputType="text"
            android:singleLine="false" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="809 891 6169"
            android:id="@+id/textUserPhone"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:inputType="phone"
            android:singleLine="false" />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="mitra@mitramejia.com"
            android:id="@+id/textUserEmail"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:inputType="textEmailAddress"
            android:singleLine="false" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonTransferNfc"
            android:layout_row="9"
            android:layout_column="0"
            android:layout_gravity="center"
            android:text="@string/button_text_share_via_nfc"
            android:longClickable="false"
            android:onClick="updateUserProfile" />

    </GridLayout>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonEditProfile"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="19dp"
        android:background="@color/transparent"
        android:src="@mipmap/icon_done" />

</RelativeLayout>
