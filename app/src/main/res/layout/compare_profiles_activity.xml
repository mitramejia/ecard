<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="unibe.ecard.CompareProfilesActivity"
    android:padding="0dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/profileHeaderHeight"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Mitra Mejía"
            android:id="@+id/textUserFullName"
            android:editable="true"
            android:layout_gravity="left|top"
            android:gravity="center_vertical|center_horizontal"
            android:autoText="false"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:elegantTextHeight="true"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false"
            android:layout_weight="0.50" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/profileHeaderHeight"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Allam Gallam"
            android:id="@+id/textUserNfcFullName"
            android:layout_alignParentTop="true"
            android:editable="true"
            android:gravity="center_vertical|center_horizontal"
            android:autoText="false"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/white"
            android:elegantTextHeight="true"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_alignParentEnd="false"
            android:layout_weight="0.50"
            android:layout_gravity="right|top" />
    </LinearLayout>

    <GridLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="false"
        android:rowCount="10"
        android:columnCount="1"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/linearLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Habilities you both have"
            android:id="@+id/labelUserHabilities"
            android:layout_row="2"
            android:layout_column="0"
            android:elegantTextHeight="false"
            android:layout_marginTop="@dimen/label_margin_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="JavaScript"
            android:id="@+id/textUserBothHability1"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:phoneNumber="true"
            android:singleLine="false"
            android:editable="true"
            android:layout_gravity="top" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="PHP"
            android:id="@+id/textUserBothHability2"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:phoneNumber="true"
            android:singleLine="false"
            android:editable="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Allam’s Contact"
            android:id="@+id/labelUserNfcContact"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/label_margin_vertical" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Av. Independencia KM 10/2"
            android:id="@+id/textUserNfcDirection"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:phoneNumber="true"
            android:singleLine="false"
            android:editable="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="809 663 3706"
            android:id="@+id/textUserNfcPhone"
            android:layout_row="7"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:phoneNumber="true"
            android:singleLine="false"
            android:editable="true" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="allamgr@gmail.com"
            android:id="@+id/textUserNfcEmail"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:textColor="@android:color/black"
            android:phoneNumber="true"
            android:singleLine="false"
            android:editable="true" />

    </GridLayout>

</RelativeLayout>
